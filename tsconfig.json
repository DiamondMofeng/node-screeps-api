{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "typeAcquisition": {
    "enable": true    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}